{
  "name": "iot-api",
  "version": "1.0.0",
  "description": "",
  "main": "app/server.js",
  "scripts": {
    "build": "rimraf build/ && babel ./ --out-dir build/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "start": "nodemon server.js --ignore 'migrations/*.js' --ignore 'db.json' --exec babel-node --presets es2015",
    "daemon": "forever build/server.js --exec",
    "sequelize": "sequelize $*",
    "autodoc": "apidoc -f '.*\\.js$' -i app/ -o docs/"
  },
  "dependencies": {
    "apn": "^2.1.5",
    "aws-sdk": "^2.183.0",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.7",
    "express": "^4.15.3",
    "express-ws": "^3.0.0",
    "fcm-node": "^1.2.1",
    "fcm-push": "^1.1.3",
    "firebase-admin": "^5.5.0",
    "html-pdf": "^2.2.0",
    "lowdb": "^1.0.0",
    "morgan": "^1.8.2",
    "mysql": "^2.14.1",
    "mysql2": "^1.4.2",
    "nodemon": "^1.17.1",
    "nrf": "^0.8.3",
    "sequelize": "^4.7.5",
    "sequelize-auto-migrations": "^1.0.2",
    "sequelize-cli": "^3.2.0",
    "shipit-deploy": "^2.5.1",
    "socket.io": "^2.0.4",
    "ws": "^4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "mysqldump": "^1.4.2",
    "rimraf": "^2.6.1",
    "shipit-cli": "^3.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "migrations/*",
      "db.json"
    ]
  }
}
